<body>

  <h1>üéØ Upgraded Goggles</h1>
  <div>
    üí∞ Balance: <span id="balance">1000</span> credits |
    ‚öôÔ∏è Tokens: <span id="tokens">0</span>
  </div>
  <br>
  <label>Bet Amount: </label>
  <input type="number" id="betAmount" value="100" min="1">
  <br>
  <button id="spinBtn">SPIN</button>
  <div id="wheel"></div>
  <div id="result"></div>
  <div id="status"></div>

  <script>
    let balance = 1000;
    let tokens = 0;

    const outcomes = [
      { label: 'x2', color: '#28a745', type: 'multiplier', value: 2 },
      { label: 'x5', color: '#007bff', type: 'multiplier', value: 5 },
      { label: 'üî• Fire Vision', color: '#dc3545', type: 'bonus', value: 3 },
      { label: 'üíÄ Skull (Lose)', color: '#6c757d', type: 'lose' },
      { label: 'üëÅÔ∏è Eagle Eye x10', color: '#ffc107', type: 'multiplier', value: 10 },
      { label: '‚öôÔ∏è Upgrade Token', color: '#17a2b8', type: 'token' },
      { label: '‚ùå Nothing', color: '#343a40', type: 'none' },
      { label: 'x3', color: '#6610f2', type: 'multiplier', value: 3 }
    ];

    const wheel = document.getElementById('wheel');
    const spinBtn = document.getElementById('spinBtn');
    const result = document.getElementById('result');
    const status = document.getElementById('status');
    const balanceEl = document.getElementById('balance');
    const tokenEl = document.getElementById('tokens');
    const betInput = document.getElementById('betAmount');

    let currentRotation = 0;

    function updateUI() {
      balanceEl.innerText = balance;
      tokenEl.innerText = tokens;
    }

    function createWheel() {
      const angle = 360 / outcomes.length;
      outcomes.forEach((outcome, i) => {
        const seg = document.createElement('div');
        seg.className = 'segment';
        seg.style.backgroundColor = outcome.color;
        seg.style.transform = `rotate(${i * angle}deg) skewY(-${90 - angle}deg)`;
        seg.innerText = outcome.label;
        wheel.appendChild(seg);
      });
    }

    function spinWheel() {
      const bet = parseInt(betInput.value);

      if (isNaN(bet) || bet <= 0 || bet > balance) {
        status.innerText = "‚ùå Invalid bet amount.";
        return;
      }

      balance -= bet;
      updateUI();
      result.innerText = '';
      status.innerText = 'Spinning...';

      const spins = 5 + Math.floor(Math.random() * 5);
      const degrees = 360 * spins + Math.floor(Math.random() * 360);
      currentRotation += degrees;
      wheel.style.transform = `rotate(${currentRotation}deg)`;

      const segmentAngle = 360 / outcomes.length;
      const normalizedDeg = (currentRotation % 360 + 360) % 360;
      const index = Math.floor(((360 - normalizedDeg) % 360) / segmentAngle);
      const outcome = outcomes[index];

      setTimeout(() => {
        let message = `üéØ Result: ${outcome.label}`;
        if (outcome.type === 'multiplier') {
          const win = bet * outcome.value;
          balance += win;
          message += ` ‚Äî You won ${win} credits!`;
        } else if (outcome.type === 'bonus') {
          const win = bet * outcome.value;
          balance += win;
          message += ` ‚Äî Bonus round! You won ${win} credits!`;
        } else if (outcome.type === 'token') {
          tokens += 1;
          message += ` ‚Äî You earned an Upgrade Token!`;
        } else if (outcome.type === 'lose') {
          message += ` ‚Äî You lost your bet.`;
        } else {
          message += ` ‚Äî No win this time.`;
        }
        updateUI();
        result.innerText = message;
        status.innerText = '';
      }, 4000);
    }

    createWheel();
    spinBtn.addEventListener('click', spinWheel);
    updateUI();
  </script>
</body>
</html>